<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelayout1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#B9F6CA"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main"
            android:padding="8dp">



            <ImageView
                android:id="@+id/tImage1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tImage1"
                android:text="kushagra singh"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/tDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tTitle2"



                android:layout_marginLeft="3dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tImage1"
                android:text="13.3 Inch, 256 "
                android:textColor="#FF0000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tDesc1"
                android:textAlignment="center"

                android:textSize="15sp"
                android:id="@+id/tdocdes"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/tImage1"/>



                <Button
                    android:id="@+id/call"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tdocdes"

                    android:background="#8C9EFF"
                    android:text="Call"
                    android:layout_marginStart="30dp"


                    android:layout_marginTop="20dp"
                    android:layoutDirection="inherit" />

                <Button
                    android:id="@+id/Appointment"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="20dp"



                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/call"
                    android:layout_below="@+id/tdocdes"
                    android:background="#8C9EFF"

                    android:text="Book Appoinment" />
        </RelativeLayout>










    </androidx.cardview.widget.CardView>



</RelativeLayout>